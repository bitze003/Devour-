<div class="container">
	
	<div class="row">
	    <div class="center col s12">
			<img src="/assets/img/burger.png" alt="devourit">
	        <h1>Devour IT!</h1>
	        <p></p>
	    </div>
  	</div>


	<div class="row">
		<div class="col s12">
			<div class="col s5" id="burgersToEat">
				<h2>Burgers Available To Eat!</h2>
					<ul>
					  {{#each burgers}}
					    {{#unless this.devoured}}
					      <li>
					      	#
					      	{{this.id}}
					        {{this.burger_name}}

					        <form action="/{{this.id}}?_method=POST" method="POST">
					          <input type="hidden" name="devoured" value="true">
					          <button class="btn-primary" type="submit">Devour It!</button>
					        </form>

					      </li>
					    {{/unless}}
					  {{/each}}
					</ul>
		    </div>
		    <div class="col s5" id="burgersYouAte">
				<h2>Burgers you ate!</h2>
				<ul>
				  {{#each burgers}}
				    {{#if this.devoured}}
				      <li>
				      	#
				      	{{this.id}}
				        {{this.burger_name}}
				      </li>
				    {{/if}}
				  {{/each}}
				 </ul>
		    </div>

		</div>
	</div>
	<!-- end row for displaying Available and Eaten Burgers -->
	<div class="row">
		    <div class="center col s12">

				<h2>Add A Burger!</h2>

				<form  class="create-update-form" action="/" method="POST">

				  <div id="BurgerSubmit" class="form-group">
				    <p>Enter a burger you want to make and click the Submit Burger.</p>
				    <input type="text" id="ca" name="burger_name">
				  </div>
				  
				  <button class="btn-primary" type="submit">Submit Burger</button>
				</form>

		    </div>
		
	</div>
	<!-- end row for adding a burger -->

</div> <!-- end container -->